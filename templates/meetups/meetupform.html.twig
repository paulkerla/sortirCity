{% extends 'base.html.twig' %}

{% block title %}Create Meetup{% endblock %}

{% block body %}
    <main class="container mt-5">
        <h1 class="display-4 mb-4 text-center">Create New Meetup</h1>

        <div class="card p-4 shadow-sm">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.name, 'Activity Title', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.startdatetime, 'Start Date & Time', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.startdatetime, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.startdatetime) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.registrationlimitdate, 'Registration Deadline', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.registrationlimitdate, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.registrationlimitdate) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.duration, 'Duration', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.duration) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.maxregistrations, 'Max Participants', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.maxregistrations, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.maxregistrations) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.meetupinfos, 'Details', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.meetupinfos, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.meetupinfos) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.site, 'Site', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.site, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.site) }}
            </div>

            <h4 class="mt-4">Choose an existing location</h4>
            <div class="mb-3">
                {{ form_widget(form.place, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.place) }}
            </div>

            <h5 class="mt-3">Or enter a new location</h5>
            <div class="mb-3">
                {{ form_label(form.newPlace.name, 'Place Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.newPlace.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.newPlace.name) }}
            </div>

            <h5 class="mt-3">Select a city</h5>
            <div class="mb-3">
                {{ form_widget(form.newPlace.city, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.newPlace.city) }}
            </div>

            <h5 class="mt-3">Or create a new city</h5>
            <div class="mb-3">
                {{ form_label(form.newPlace.newCity.name, 'City Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.newPlace.newCity.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.newPlace.newCity.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.newPlace.newCity.zipcode, 'Zip Code', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.newPlace.newCity.zipcode, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.newPlace.newCity.zipcode) }}
            </div>

            <button type="submit" class="btn btn-primary mt-3 w-100">Submit</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
