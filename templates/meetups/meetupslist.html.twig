{% extends 'base.html.twig' %}

{% block title %}Meetups{% endblock %}

{% block body %}
    <main class="container mt-5">
        <section class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4 text-dark">Meetups</h1>
            <a href="{{ path('meetup_form') }}" class="btn btn-primary">
                New Meetup
            </a>
        </section>

        <section class="row">
            {% for meetup in meetups %}
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h3 class="card-title h4 text-dark fw-bold mb-3">{{ meetup.name }}</h3>

                            <p class="text-muted mb-2">📅 <strong>Start Date:</strong>
                                <span class="fw-semibold">{{ meetup.startdatetime|date('d M Y H:i') }}</span>
                            </p>
                            <p class="text-muted mb-2">⏳ <strong>Duration:</strong>
                                <span class="fw-semibold">{{ meetup.duration }} hours</span>
                            </p>
                            <p class="text-muted mb-2">📍 <strong>Location:</strong>
                                <span class="fw-semibold">{{ meetup.place.name }}</span>
                            </p>
                            <p class="text-muted mb-2">👤 <strong>Organizer:</strong>
                                <span class="fw-semibold">{{ meetup.organizer.username }}</span>
                            </p>
                            <p class="text-muted mb-4">📝 <strong>State:</strong>
                                <span class="fw-semibold">{{ meetup.state.label }}</span>
                            </p>

                            <div class="bg-light p-3 rounded mb-3">
                                <p class="text-dark fw-semibold mb-2">Participants:</p>
                                <ul class="list-unstyled text-muted">
                                    {% for participant in meetup.participants %}
                                        <li>{{ participant.username }}</li>
                                    {% else %}
                                        <li class="fst-italic">No participants yet.</li>
                                    {% endfor %}
                                </ul>
                            </div>

                            {% if app.user == meetup.organizer or is_granted('ROLE_ADMIN') %}
                                <form action="{{ path('meetup_update_state', {'id': meetup.id}) }}" method="POST" class="mt-auto">
                                    <label for="state" class="form-label">Update State:</label>
                                    <select name="state" class="form-select mb-3">
                                        {% for state in states %}
                                            <option value="{{ state.id }}" {% if state.id == meetup.state.id %}selected{% endif %}>
                                                {{ state.label }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="btn btn-primary w-100">Update State</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}
