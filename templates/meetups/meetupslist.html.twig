{% extends 'base.html.twig' %}

{% block title %}Meetups{% endblock %}

{% block body %}
    <main class="container mt-5">
        <nav class="nav mb-4">
            <a href="{{ path('meetup_list') }}" class="nav-link {% if currentSite is not defined %}active{% endif %}">
                Tous les sites
            </a>
            {% for site in sites %}
                <a href="{{ path('meetup_list', { 'site': site.id }) }}" class="nav-link
    {% if currentSite is not null and currentSite.id == site.id %}active{% endif %}">
                    {{ site.name }}
                </a>

            {% endfor %}
        </nav>

        <section class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4 text-dark">Meetups</h1>
            <a href="{{ path('meetup_form') }}" class="btn btn-primary">New Meetup</a>
        </section>

        {% for site, meetups in meetupsBySite %}
            <section class="mb-5">
                <h2 class="text-primary">{{ site }}</h2>

                <div class="row">

                    {% for meetup in meetups %}
                        {% if meetup.state.label != 'Archive' %}
                            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body d-flex flex-column">
                                        {% if app.user == meetup.organizer or is_granted('ROLE_ADMIN') %}
                                            <div class="d-flex justify-content-between mb-3">
                                                <a href="{{ path('meetup_edit', { 'id': meetup.id }) }}"
                                                   class="btn btn-primary">
                                                    Edit Meetup
                                                </a>
                                                <a href="{{ path('meetup_delete', { 'id': meetup.id }) }}"
                                                   class="btn btn-danger">Delete</a>
                                            </div>
                                        {% endif %}
                                        <a href="{{ path('meetup_details', { 'id': meetup.id }) }}"
                                           class="card-title h4 text-dark fw-bold mb-3">{{ meetup.name }}</a>

                                        <p class="text-muted mb-2">üìÖ <strong>Start Date:</strong>
                                            <span class="fw-semibold">{{ meetup.startdatetime|date('d M Y H:i') }}</span>
                                        </p>
                                        <p class="text-muted mb-2">‚è≥ <strong>Duration:</strong>
                                            <span class="fw-semibold">{{ meetup.duration }} minutes</span>
                                        </p>
                                        <p class="text-muted mb-2">üìç <strong>Location:</strong>
                                            <span class="fw-semibold">{{ meetup.place.name }}</span>
                                        </p>
                                        <p class="text-muted mb-2">üë§ <strong>Organizer:</strong>
                                            <span class="fw-semibold">{{ meetup.organizer.username }}</span>
                                        </p>
                                        <p class="text-muted mb-4">üìù <strong>State:</strong>
                                            <span class="fw-semibold">{{ meetup.state.label }}</span>
                                        </p>

                                        <div class="bg-light p-3 rounded mb-3">
                                            <p class="text-dark fw-semibold mb-2">Participants:</p>
                                            <ul class="list-unstyled text-muted">
                                                {% for participant in meetup.participants %}
                                                    <li>{{ participant.username }}</li>
                                                {% else %}
                                                    <li class="fst-italic">No participants yet.</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                        {% if app.user == meetup.organizer or is_granted('ROLE_ADMIN') %}
                                            <form action="{{ path('meetup_update_state', {'id': meetup.id}) }}"
                                                  method="POST" class="mt-auto">
                                                <label for="state" class="form-label">Update State:</label>
                                                <select name="state" class="form-select mb-3">
                                                    {% for state in states %}
                                                        <option value="{{ state.id }}"
                                                                {% if state.id == meetup.state.id %}selected{% endif %}>
                                                            {{ state.label }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                                <button type="submit" class="btn btn-primary w-100">Update State
                                                </button>
                                            </form>
                                        {% endif %}

                                        {% if meetup.participants.contains(app.user) %}
                                            <a href="{{ path('meetup_unsubscribe', {'id': meetup.id}) }}"
                                               class="btn btn-warning">
                                                Unsubscribe
                                            </a>

                                        {% elseif meetup.state.label != 'Closed' %}
                                            <a href="{{ path('meetup_subscribe', {'id': meetup.id}) }}"
                                               class="btn btn-success">
                                                Subscribe
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                </div>
            </section>
        {% endfor %}
    </main>
{% endblock %}
