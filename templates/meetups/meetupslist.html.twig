{% extends 'base.html.twig' %}

{% block title %}Meetups{% endblock %}

{% block body %}
    <main class="container mt-5">
        <nav class="nav mb-4">
            <a href="{{ path('meetup_list') }}" class="nav-link {% if currentSite is empty %}active{% endif %}">Tous les sites</a>
            {% for site in sites %}
                <a href="{{ path('meetup_list', { 'site': site.id }) }}" class="nav-link {% if currentSite is not empty and currentSite.id == site.id %}active{% endif %}">{{ site.name }}</a>
            {% endfor %}
        </nav>

        <section class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4 text-dark">Meetups</h1>
            <a href="{{ path('meetup_form') }}" class="btn btn-primary">New Meetup</a>
        </section>

        <form method="get" action="{{ path('meetup_list') }}" class="mb-4">
            <div class="row">
                <div class="col-md-3">
                    <input type="text" name="search" value="{{ search }}" placeholder="Search by name" class="form-control mb-2">
                </div>
                <div class="col-md-3">
                    <input type="date" name="date_min" value="{{ dateMin }}" placeholder="Start Date" class="form-control mb-2">
                </div>
                <div class="col-md-3">
                    <input type="date" name="date_max" value="{{ dateMax }}" placeholder="End Date" class="form-control mb-2">
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </div>
        </form>

        {% for site, meetups in meetupsBySite %}
            <section class="mb-5">
                <h2 class="text-primary">{{ site }}</h2>
                <div class="row">

                    {% for meetup in meetups %}
                        {% if meetup.state.label != 'Archive' and meetup.state.label != 'Passed' %}
                            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                                <a href="{{ path('meetup_details', { 'id': meetup.id }) }}" class="text-decoration-none">
                                    <div class="card h-100 shadow-sm hover-card">
                                        <div class="card-body d-flex flex-column">
                                            {% if app.user == meetup.organizer or is_granted('ROLE_ADMIN') %}
                                                <div class="d-flex justify-content-between mb-3">
                                                    <a href="{{ path('meetup_edit', { 'id': meetup.id }) }}" class="btn btn-primary btn-sm">Edit</a>
                                                    <form action="{{ path('meetup_delete', { 'id': meetup.id }) }}" method="post" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_meetup_' ~ meetup.id) }}">
                                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this meetup?');">
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            {% endif %}
                                            <h3 class="card-title h4 text-dark fw-bold mb-3">{{ meetup.name }}</h3>
                                            <p class="text-muted mb-2">üìÖ <strong>Start Date:</strong> <span class="fw-semibold">{{ meetup.startdatetime|date('d M Y H:i') }}</span></p>
                                            <p class="text-muted mb-2">‚è≥ <strong>Duration:</strong> <span class="fw-semibold">{{ meetup.duration }} minutes</span></p>
                                            <p class="text-muted mb-2">üìç <strong>Location:</strong> <span class="fw-semibold">{{ meetup.place.name }}</span></p>
                                            <p class="text-muted mb-2">üìç <strong>Location:</strong> <span class="fw-semibold">{{ meetup.place.city.name }}</span></p>
                                            <p class="text-muted mb-2">üë§ <strong>Organizer:</strong> <span class="fw-semibold">{{ meetup.organizer.username }}</span></p>
                                            <p class="text-muted mb-4">üìù <strong>State:</strong> <span class="fw-semibold">{{ meetup.state.label }}</span></p>
                                            <div class="bg-light p-3 rounded mb-3">
                                                <p class="text-dark fw-semibold mb-2">Participants:</p>
                                                <ul class="list-unstyled text-muted">
                                                    {% for participant in meetup.participants %}
                                                        <li><a href="{{ path('app_profile_user', {'id':participant.id}) }}">{{ participant.username }}</a></li>
                                                    {% else %}
                                                        <li class="fst-italic">No participants yet.</li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                            {% if meetup.participants.contains(app.user) %}
                                                <a href="{{ path('meetup_unsubscribe', {'id': meetup.id}) }}" class="btn btn-warning">
                                                    Unsubscribe
                                                </a>
                                            {% elseif meetup.state.label != 'Closed' %}
                                                <a href="{{ path('meetup_subscribe', {'id': meetup.id}) }}" class="btn btn-success">
                                                    Subscribe
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}

                </div>
            </section>
        {% endfor %}
    </main>
{% endblock %}
