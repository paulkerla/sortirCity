{% extends 'base.html.twig' %}

{% block title %} Sites Management {% endblock %}

{% block body %}
    <div class="container mt-5">
        <a href="{{ path('gestion_index') }}" class="btn btn-secondary btn-sm mb-3"> <-- </a>

        <form method="get" action="{{ path('gestion_sites') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Find a site" value="{{ search }}">
                <button type="submit" class="btn btn-secondary-custom">Search</button>
            </div>
        </form>
        <h1 class="mb-4 text-site-color">Sites Management</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for site in sites %}
                <tr>
                    <td>{{ site.name }}</td>
                    <td>
                        <a href="{{ path('gestion_site_update', {id: site.id}) }}" class="btn btn-secondary-custom btn-sm">Edit</a>
                        <a href="{{ path('gestion_site_delete', {id: site.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this site?');">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No cities found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('gestion_site_create') }}" class="btn btn-secondary-custom btn-sm">Add site</a>
    </div>
{% endblock %}
