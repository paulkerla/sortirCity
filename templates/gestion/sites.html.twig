{% extends 'base.html.twig' %}

{% block title %} Sites Management {% endblock %}

{% block body %}
    <div class="container mt-5">
        <a href="{{ path('gestion_index') }}" class="btn btn-secondary btn-sm"> <-- </a>
        <h1 class="mb-4">Sites Management</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for site in sites %}
                <tr>
                    <td>{{ site.name }}</td>
                    <td>
                        <a href="{{ path('gestion_site_update', {id: site.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="{{ path('gestion_site_delete', {id: site.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this site?');">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No cities found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('gestion_site_create') }}" class="btn btn-success btn-sm">Add site</a>
    </div>
{% endblock %}
