{% extends 'base.html.twig' %}

{% block title %} Places Management {% endblock %}

{% block body %}
    <div class="container mt-5">
        <a href="{{ path('gestion_index') }}" class="btn btn-secondary btn-sm mb-3"> <-- </a>

        <form method="get" action="{{ path('gestion_places') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Find a place" value="{{ search }}">
                <button type="submit" class="btn btn-secondary-custom">Search</button>
            </div>
        </form>
        <h1 class="mb-4 text-site-color">Places Management</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>street Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for place in places %}
                <tr>
                    <td>{{ place.name }}</td>
                    <td>{{ place.streetname }}</td>
                    <td>
                        <a href="{{ path('gestion_place_delete', {id: place.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this place?');">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No places found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('gestion_place_create') }}" class="btn btn-secondary-custom btn-sm">Add place</a>
    </div>
{% endblock %}
