{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <main class="container mt-5">
        <h1 class="display-4 text-center mb-4 text-site-color">Edit Profile</h1>

        {{ form_start(form) }}

        {{ form_row(form.firstname, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.surname, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.username, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.site, {'attr': {'class': 'form-select mb-3'}}) }}
        {{ form_row(form.phonenumber, {'attr': {'class': 'form-control mb-3'}}) }}
        {{ form_row(form.avatarurl, {'attr': {'class': 'form-control mb-3'}}) }}


        {# Style personnalis√© pour le bouton de soumission #}
        <div class="d-grid mt-3">
            {{ form_widget(form._token) }} {# Requis pour la protection CSRF #}
            <button type="submit" class="btn btn-secondary-custom w-100">Edit Profile</button>
        </div>

        {{ form_end(form, {'render_rest': false}) }}
    </main>
{% endblock %}
