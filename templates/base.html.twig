<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    {{ importmap('app') }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
</head>

<body class="bg-light text-dark">
<img src="{{ asset("/decoration/team-building.jpg") }}" class="img-fluid w-100 banner-image" alt="team">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 shadow-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_index') }}">ENI Meetups</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a href="{{ path('app_index') }}" class="nav-link">Home</a>
                </li>
                {% if is_granted('IS_AUTHENTICATED') %}

                    <li class="nav-item">
                        <a href="{{ path('app_profile') }}" class="nav-link">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('meetup_list') }}" class="nav-link">Meetups</a>
                    </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a href="{{ path('gestion_index') }}" class="nav-link">management</a>
                    </li>
                {% endif %}
                    <li class="nav-item">
                        <a href="{{ path('user_logout') }}" class="nav-link">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('user_login') }}" class="nav-link">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>


{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert
                    {% if label == 'success' %} alert-success {% endif %}
                    {% if label == 'error' %} alert-danger {% endif %}
                    {% if label == 'warning' %} alert-warning {% endif %}
                    {% if label == 'info' %} alert-info {% endif %}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<!-- Content -->
<main class="container">
    {% block body %}{% endblock %}
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

