                                <a href="{{ path('meetup_details', { 'id': meetup.id }) }}" class="btn btn-secondary-custom mt-auto">View Details</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </main>
{% endblock %}
