        {% endif %}

        <!-- Section "Plus Tard" -->
        {% if meetupsLater|length > 0 %}
            <h3 class="mt-4 text-site-color">Later</h3>
            <div class="row">
                {% for meetup in meetupsLater %}
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
